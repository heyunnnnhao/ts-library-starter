{
  "name": "ts-library-starter",
  "version": "0.0.1",
  "description": "An opinionated, minimalistic typescript utility/ui library starter template",
  "author": "heyunhao",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 14"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && npm run type:dts && npm run type:build",
    "clean": "rimraf dist",
    "type:dts": "tsc --emitDeclarationOnly",
    "type:check": "tsc --noEmit",
    "type:build": "ts-node ./build",
    "format": "prettier \"src/**/*.ts\" --write",
    "format:check": "prettier \"src/**/*.ts\" --check",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "esbuild": "^0.14.28",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-sass-plugin": "^2.2.5",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "prettier": "^2.6.1",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "files": [
    "dist"
  ]
}
